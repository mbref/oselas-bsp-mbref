-	XASSERT_NONVOID(CallbackFunc != NULL);
-
-	switch (HandlerType) {
-	case XTE_HANDLER_FIFOSEND:
-		InstancePtr->FifoSendHandler =
-			(XTemac_FifoSendHandler) CallbackFunc;
-		InstancePtr->FifoSendRef = CallbackRef;
-		break;
-
-	case XTE_HANDLER_FIFORECV:
