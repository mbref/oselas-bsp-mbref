-	if (get_phy_status(dev, &phy_duplex, &phy_carrier)) {
-		printk(KERN_ERR "%s: XTemac: terminating link monitoring.\n",
-		       dev->name);
-		spin_unlock_irqrestore(&XTE_spinlock, flags);
