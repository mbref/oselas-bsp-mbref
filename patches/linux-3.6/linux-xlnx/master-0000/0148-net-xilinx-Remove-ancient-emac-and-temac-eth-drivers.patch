-void XEmac_PhyReset(XEmac * InstancePtr)
-{
-	u32 RegECR;
-
-	XASSERT_VOID(InstancePtr != NULL);
-
-	/* Disable/reset the PHY */
-	RegECR = XIo_In32(InstancePtr->BaseAddress + XEM_ECR_OFFSET);
