-	/* Direct transfer */
-	while (FifoTransfersLeft--) {
-		mReadFifo64(F, BufPtr);
-		BufPtr += 2;
-	}
-
-	/* Leftover bytes are left in the holding area */
-	if (PartialBytes) {
-		Read64_Unaligned(F, BufPtr, PartialBytes);
-	}
-}
