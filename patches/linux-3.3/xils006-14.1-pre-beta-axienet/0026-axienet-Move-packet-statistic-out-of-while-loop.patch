From b9a03bf976fca2d700dcd94dbad98aa7bad94620 Mon Sep 17 00:00:00 2001
From: Michal Simek <monstr@monstr.eu>
Date: Sun, 2 Oct 2011 15:18:51 +0200
Subject: [PATCH] axienet: Move packet statistic out of while loop

Use variable instead of memory accesses.

Signed-off-by: Michal Simek <monstr@monstr.eu>
---
 drivers/net/ethernet/xilinx/xilinx_axienet_main.c |   20 +++++++++++++++-----
 1 files changed, 15 insertions(+), 5 deletions(-)

diff --git a/drivers/net/ethernet/xilinx/xilinx_axienet_main.c b/drivers/net/ethernet/xilinx/xilinx_axienet_main.c
index 71acc6d..b7717df 100644
--- a/drivers/net/ethernet/xilinx/xilinx_axienet_main.c
+++ b/drivers/net/ethernet/xilinx/xilinx_axienet_main.c
@@ -684,6 +684,8 @@ static void axienet_start_xmit_done(struct net_device *ndev)
 	struct axienet_local *lp = netdev_priv(ndev);
 	struct axidma_bd *cur_p;
 	unsigned int status = 0;
+	u32 size = 0;
+	u32 packets = 0;
 
 	cur_p = &lp->tx_bd_v[lp->tx_bd_ci];
 	status = cur_p->status;
@@ -702,9 +704,8 @@ static void axienet_start_xmit_done(struct net_device *ndev)
 		cur_p->app4 = 0;
 		cur_p->status = 0;
 
-		ndev->stats.tx_packets++;
-		ndev->stats.tx_bytes += (status &
-					XAXIDMA_BD_STS_ACTUAL_LEN_MASK);
+		size += status & XAXIDMA_BD_STS_ACTUAL_LEN_MASK;
+		packets++;
 
 		lp->tx_bd_ci = ++lp->tx_bd_ci % TX_BD_NUM;
 
@@ -712,6 +713,9 @@ static void axienet_start_xmit_done(struct net_device *ndev)
 		status = cur_p->status;
 	}
 
+	ndev->stats.tx_packets += packets;
+	ndev->stats.tx_bytes += size;
+
 	netif_wake_queue(ndev);
 }
 
@@ -833,6 +837,8 @@ static void axienet_recv(struct net_device *ndev)
 	dma_addr_t tail_p;
 	u32 length;
 	u32 csumstatus;
+	u32 size = 0;
+	u32 packets = 0;
 
 	tail_p = lp->rx_bd_p + sizeof(*lp->rx_bd_v) * lp->rx_bd_ci;
 	cur_p = &lp->rx_bd_v[lp->rx_bd_ci];
@@ -867,8 +873,8 @@ static void axienet_recv(struct net_device *ndev)
 
 		netif_rx(skb);
 
-		ndev->stats.rx_packets++;
-		ndev->stats.rx_bytes += length;
+		size += length;
+		packets++;
 
 		new_skb = netdev_alloc_skb_ip_align(ndev,
 						lp->max_frm_size);
@@ -889,6 +895,10 @@ static void axienet_recv(struct net_device *ndev)
 
 		cur_p = &lp->rx_bd_v[lp->rx_bd_ci];
 	}
+
+	ndev->stats.rx_packets += packets;
+	ndev->stats.rx_bytes += size;
+
 	axienet_dma_out32(lp, XAXIDMA_RX_TDESC_OFFSET, tail_p);
 }
 
